<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ht.dao.mapper.EnterpriseDealMapper">
    <resultMap id="BaseResultMap" type="com.ht.model.EnterpriseInfo">
        <id column="enterprise_id" jdbcType="INTEGER" property="enterpriseId"/>
        <result column="enterprise_name" jdbcType="VARCHAR" property="enterpriseName"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_" jdbcType="TIMESTAMP" property="update"/>
    </resultMap>
    <sql id="Base_Column_List">
    enterprise_id, enterprise_name, create_time, update_
  </sql>
    <select id="getEnterpriseListByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from ht_enterprise_info a ,ht_enterprise_user_rela b
        on a.enterprise_id=b.enterprise_id
        where b.user_id = #{userId,jdbcType=INTEGER}
    </select>
    <select id="getEnterpriseListByEnterpriseInfo" parameterType="com.ht.model.EnterpriseDeal"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from ht_enterprise_info a ,ht_enterprise_user_rela b
        on a.enterprise_id=b.enterprise_id
        where b.user_id = #{userId,jdbcType=INTEGER}
        <if test="enterpriseName != null">
            and a.enterprise_name like concat('%',#{enterpriseName,jdbcType=VARCHAR},'%')
        </if>
        ;
    </select>

</mapper>